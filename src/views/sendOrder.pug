extends baseEmail 

block content 
  div
  a(target="_blank" href="http://localhost:5173")
    img(src="https://res.cloudinary.com/devr9hihw/image/upload/v1727368649/azvhqocb9cqex72p7rgb.png" style="width:80px;color:#000")

  p(style="color:#2986cc") Kính gửi Anh/chị: #{data.customerName}
  p #{message}

  p(style="font-weight:bold") Hóa đơn được tạo lúc: #{formatDateTime(data.createdAt)}

  div(style="border:1px solid #ccc;border-radius:10px;padding:10px 20px;width:max-content")
    p Mã hóa đơn: #{data.invoiceId}
    p Khách hàng: #{data.customerName}
    p Điện thoại: #{data.phoneNumber}
    p Địa chỉ nhận hàng: #{data.shippingAddress}

    table(style="text-align:center")
      thead
        tr(style="background-color: #CFE2F3;")
          th(style="padding: 10px;") STT
          th(style="padding: 10px;") Sản phẩm
          th(style="padding: 10px;") Cân nặng
          th(style="padding: 10px;") Đơn giá
      tbody
        each product, index in data.products
          tr(style="border-bottom:1px solid #ccc")
            td(style="padding: 10px;") #{index + 1}
            td(style="padding: 10px;")
              img(alt="image", src=product.thumbnail, style="width:90px;height:90px;border-radius:5px")
              p #{product.name} (#{product.name})
            td(style="padding: 10px;") #{product.price.toLocaleString('vi-VN')} VNĐ/kg

    h4 Tổng: #{amountReduced != null ? (amountReduced + totalPayment).toLocaleString('vi-VN') + ' VNĐ' : formattedTotalPaymentValue}

    h3(style="color:red;font-weight:bold;margin-top:20px") Tổng tiền thanh toán: #{formattedTotalPayment || formattedTotalPaymentValue}

    p Thanh toán: #{data.pay === false ? 'Thanh toán khi nhận hàng' : 'Đã thanh toán online'}
    p Trạng thái đơn hàng: #{data.status}

  p Xin cảm ơn quý khách!
  p(style="color:#2986CC;font-weight:500") Bộ phận chăm sóc khách hàng FRESH MART: 
    a(href="tel:0565079665") 0565 079 665
